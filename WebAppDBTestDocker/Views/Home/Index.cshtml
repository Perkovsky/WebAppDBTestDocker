@model ViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Hostname: @Context.Request.Host</h1>
    <h3>All Users</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Age</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Age</td>
                    <td>@item.Phone</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <form asp-controller="Home" asp-action="AddRandomUser" method="post">
        <button type="submit">Add random user</button>
    </form>
    <br />
    <h3>All Guids</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Guid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Guids)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Guid</td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <form asp-controller="Home" asp-action="AddGuid" method="post">
        <button type="submit">Add GUID</button>
    </form>
</body>
</html>
